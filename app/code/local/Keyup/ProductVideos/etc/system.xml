<?xml version="1.0"?>
<config>
    <sections>
        <design>
            <groups>
                <productvideos translate="label">
                    <label>Product Videos</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>45</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <pvwidth translate="label comment">
                            <label>Common width</label>
                            <comment>Size of embed/iframe in pixels.</comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </pvwidth>
                        <pvheight translate="label comment">
                            <label>Common height</label>
                            <comment>Size of embed/iframe in pixels.</comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </pvheight>
                        <pvbehavior translate="label">
                            <label>Video behavior and placement</label>
                            <frontend_type>select</frontend_type>
                            <source_model>keyup_productvideos/source_videoBehavior</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </pvbehavior>
                    </fields>
                </productvideos>
            </groups>
        </design>
    </sections>
</config>